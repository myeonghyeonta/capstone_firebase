<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".AbdominalActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/gradation_background">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:src="@drawable/ic_baseline_navigate_before_24"/>


</LinearLayout>


<androidx.cardview.widget.CardView
    android:layout_width="339dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="18dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="318dp"
            android:layout_height="119dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/wemakeprice_semibold"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="사이드 밴드\n(Side band)"
                    android:textColor="@color/black"
                    android:textSize="20dp" />



            </LinearLayout>

            <view
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"></view>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingRight="16dp">

                <Button
                    android:id="@+id/learning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="학습"
                    android:fontFamily="@font/wemakeprice_regular"
                    android:background="@drawable/button_background"
                    android:textSize="14dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운동"
                    android:fontFamily="@font/wemakeprice_regular"
                    android:background="@drawable/button_background"
                    android:textSize="14dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:layout_width="339dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="18dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="334dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="318dp"
            android:layout_height="119dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/wemakeprice_semibold"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="와이드 스쿼트\n 사이드 크런치\n(Wide squat\n Side crunch)"
                    android:textColor="@color/black"
                    android:textSize="20dp" />



            </LinearLayout>

            <view
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"></view>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingRight="16dp">

                <Button
                    android:id="@+id/learning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="학습"
                    android:fontFamily="@font/wemakeprice_regular"
                    android:background="@drawable/button_background"
                    android:textSize="14dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="운동"
                    android:fontFamily="@font/wemakeprice_regular"
                    android:background="@drawable/button_background"
                    android:textSize="14dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>