<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="38dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:background="#F8F8F8"
    tools:context="org.tensorflow.lite.examples.posenet.MainActivity">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="59dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="248dp"
            android:layout_height="59dp"
            android:scaleType="fitStart"
            android:src="@drawable/logo2" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="318dp"
                android:layout_height="119dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/wemakeprice_semibold"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="와이드 스쿼트\n(Wide squat)"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/tutorial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="학습"
                            android:fontFamily="@font/wemakeprice_regular"
                            android:textSize="14dp"
                            />

                        <Button
                            android:id="@+id/sidejack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="운동"
                            android:fontFamily="@font/wemakeprice_regular"
                            android:textSize="14dp"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="138dp"
                    android:layout_height="127dp"
                    android:layout_marginTop="-8dp"
                    android:src="@drawable/sidejack" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="318dp"
                android:layout_height="119dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/wemakeprice_semibold"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:text="와이드 스쿼트\n(Wide squat)"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/widesquat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="학습"
                            android:fontFamily="@font/wemakeprice_regular"
                            android:textSize="14dp"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="운동"
                            android:fontFamily="@font/wemakeprice_regular"
                            android:textSize="14dp"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="168dp"
                    android:layout_height="127dp"
                    android:layout_marginTop="-8dp"
                    android:src="@drawable/squats" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>